<!DOCTYPE html>
<html>
<head>
  <title>MyWeather</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'My Weather', root_path, class: 'navbar-brand' %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
          </ul>
          <%= form_tag weathers_show_path, method: 'get', class: 'navbar-form navbar-left' do %>
            <%= text_field_tag :zipcode, params[:zipcode], id: 'zipcode', placeholder: 'Zipcode (ex. 99212)', class: 'form-control', required: true %>
            <button type='submit' class='btn btn-primary'>Get Weather</button>
          <% end %>
          <ul class="nav navbar-nav navbar-right">
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

  <% if flash[:error].present? %>
    <div class="col-xs-10 col-xs-offset-1 alert alert-danger">
      <a href='#' class='close' data-dismiss='alert' aria-label='close'>&times;</a>
      <%= flash[:error].html_safe %>
    </div>
  <% end %>
  <%= yield %>

</body>
</html>
