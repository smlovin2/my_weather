<div class="hero">
  <%= form_tag weathers_show_path, method: 'get', class: 'col-xs-10 col-xs-offset-1' do %>
  <%= text_field_tag :zipcode, params[:zipcode], id: 'zipcode', placeholder: 'Enter Your Zipcode (ex. 99212)', class: 'form-control', required: true %>
